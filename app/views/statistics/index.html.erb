<h1><%= @country.name %></h1>
<h2>Overall Score <%= @country.score %></h2>
<table>
  <thead>
    <tr>
      <div>Rule of Law
      <th>Youth unemployment</th>
        <th>Property rights</th>
      </div>
      <th>Fiscal freedom</th>
      <th>Monetary freedom</th>
      <th>Freedom from corruption</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @statistics.each do |statistic| %>
      <tr>
        <td><%= statistic.youth_unemployment %></td>
        <td><%= statistic.property_rights %></td>
        <td><%= statistic.fiscal_freedom %></td>
        <td><%= statistic.monetary_freedom %></td>
        <td><%= statistic.freedom_from_corruption %></td>
        <td><%= link_to 'Show', country_statistic_path(@country, statistic) %></td>
        <td><%= link_to 'Edit', edit_country_statistic_path(@country, statistic) %></td>
        <td><%= link_to 'Destroy', [@post, statistic], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

